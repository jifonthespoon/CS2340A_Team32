<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/register"
        android:layout_width="206dp"
        android:layout_height="56dp"
        android:backgroundTint="#311E10"
        android:drawableRight="@drawable/baseline_arrow_forward_24"
        android:drawablePadding="0px"
        android:paddingLeft="100px"
        android:paddingRight="100px"
        android:text="Register "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:cornerRadius="40px"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="764dp" />

    <TextView
        android:id="@+id/returnLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have an account? Log In"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#D64933"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="838dp" />

    <View
        android:layout_width="75dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="849dp" />

    <View
        android:layout_width="75dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        tools:layout_editor_absoluteX="308dp"
        tools:layout_editor_absoluteY="849dp" />

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="@color/black"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="311dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/passwordConfirmation"
        android:layout_width="350dp"
        android:layout_height="39dp"
        android:background="#B3ECE1E1"
        android:hint="Confirm password"
        android:padding="20px"
        android:password="true"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="694dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/passwordCreation"
        android:layout_width="350dp"
        android:layout_height="39dp"
        android:background="#B3ECE1E1"
        android:hint="Create password"
        android:padding="20px"
        android:password="true"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="629dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/emailAddress"
        android:layout_width="350dp"
        android:layout_height="39dp"
        android:background="#B3ECE1E1"
        android:hint="Email address"
        android:padding="20px"
        android:password="false"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="561dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/fullName"
        android:layout_width="350dp"
        android:layout_height="39dp"
        android:background="#B3ECE1E1"
        android:hint="Full name"
        android:padding="20px"
        android:password="false"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="492dp" />

    <TextView
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="45sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="354dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="154dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/fix_a_plate"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="57dp" />

</androidx.constraintlayout.widget.ConstraintLayout>